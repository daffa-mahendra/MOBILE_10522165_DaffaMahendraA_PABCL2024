<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@color/skyblue"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etInputLength"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Masukan panjang.."
        android:layout_marginTop="185dp"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"
        />

    <Spinner
        android:id="@+id/spinnerInputUnit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/etInputLength"
        android:layout_marginTop="16dp"
        />

    <Spinner
        android:id="@+id/spinnerOutputUnit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/spinnerInputUnit"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/spinnerOutputUnit"
        android:layout_marginTop="16dp"
        android:background="@color/colorBlue"
        android:text="Konversi"
        android:textColor="@color/white"
        />


    <EditText
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/btnConvert"
        android:layout_marginTop="16dp"
        android:hint="Hasil"
        android:inputType="none"
        android:focusable="false"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="end" />

</RelativeLayout>
